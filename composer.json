{
  "name": "Yakupeyisan/codeigniter4-websocket",
  "description": "Advanced modular WebSocket library for CodeIgniter 4 using Ratchet",
  "keywords": [
    "codeigniter",
    "codeigniter4",
    "php7",
    "php8",
    "php-library",
    "websocket",
    "realtime",
    "ratchet",
    "socket",
    "real-time",
    "chat",
    "broadcasting"
  ],
  "homepage": "https://github.com/Yakupeyisan/codeigniter4-websocket",
  "license": "MIT",
  "authors": [
    {
      "name": "Yakupeyisan",
      "email": "info@Yakupeyisan.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.1|^8.2|^8.3",
    "cboden/ratchet": "^0.4.4",
    "textalk/websocket": "^1.6.3",
    "codeigniter4/framework": "^4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0|^10.0",
    "phpstan/phpstan": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Yakupeyisan\\CodeIgniterWebSocket\\": "src"
    },
    "files": [
      "src/Helpers/websocket_helper.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Yakupeyisan\\CodeIgniterWebSocket\\Tests\\": "tests"
    }
  },
  "scripts": {
    "post-update-cmd": [
      "composer dump-autoload"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}

